                    <h3 style="color: #717fe0;">Shipping Address</h3>
                    <p><strong>Address:</strong>
                        <%= address.Address[0].address %>
                    </p>
                    <p><strong>City:</strong>
                        <%= address.Address[0].city %>
                    </p>
                    <p><strong>State:</strong>
                        <%= address.Address[0].state %>
                    </p>
                    <p><strong>Country:</strong>
                        <%= address.Address[0].country %>
                    </p>
                    <p><strong>Pincode:</strong>
                        <%= address.Address[0].pincode %>
                    </p>
                    <p><strong>Phone Number:</strong>
                        <%= address.Address[0].phone %>
                    </p>
                </div>

                <!-- Products Section -->
                <div class="products-section">
                    <h3 style="color: #717fe0;">Products Ordered</h3>
                    <ul class="product-list">
                        <% products.forEach(product=> { %>
                            <li class="product-item">
                                <img src="<%= './uploads/' + product.images[0] %>" alt="<%= product.productName %>"
                                    class="product-image">
                                <div class="product-details">
                                    <p class="product-name"><strong>Product:</strong>
                                        <%= product.productName %>
                                    </p>
                                    <p><strong>Price:</strong> ₹<%= product.price %>
                                    </p>
                                    <p><strong>Quantity:</strong>
                                        <%= order.product[0].quantity %>
                                    </p>

                                    <!-- Coupon Details (if applicable) -->
                                    <% if (product.discountPercentage> 0) { %>
                                        <p><strong>Discount Applied:</strong>
                                            <%= product.discountPercentage.toFixed(2) %>%
                                        </p>
                                        <p><strong>Discount Amount:</strong> ₹<%= product.discountAmount %>
                                        </p>
                                        <p><strong>Price After Discount:</strong> ₹<%= (product.discountedPrice *
                                                order.product[0].quantity).toFixed(2) %>
                                        </p>
                                        <% } else { %>
                                            <p><strong>Total Price:</strong> ₹<%= (product.price *
                                                    order.product[0].quantity).toFixed(2) %>
                                            </p>
                                            <% } %>
                                </div>
                            </li>
                            <% }) %>
