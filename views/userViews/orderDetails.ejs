                    <h3 style="color: #717fe0;">Customer Information</h3>
                    <p><strong>Name:</strong>
                        <%= user.name %>
                    </p>
                    <p><strong>Payment Method:</strong>
                        <%= order.paymentMethod %>
                    </p>
                    <p><strong>Order Status:</strong>
                        <%= order.status %>
                    </p>
                    <p><strong>Order Date:</strong>
                        <%= new Date(order.placed).toLocaleDateString() %>
                    </p>
                </div>

                <!-- Shipping Address -->
