                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->

                    <!-- dashboard  -->
                    <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                        <div class="tab-pane fade show active" id="dashboard">
                            <h2>Dashboard </h2>
                            <br>
                            <p>
                            <h4>Hello <%= userData.name %>, Welcome </h4>
                        </div>

                        <!-- orders  -->
                        <div class="tab-pane fade" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach((order,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%= index+1 %>
                                                </td>
                                                <td>
                                                    <%= new Date(order.placed).toLocaleString() %>
                                                </td>
                                                <td><span
                                                        class="<%= order.status === 'Completed' ? 'success' : (order.status === 'Pending Payment' ? 'pending' : 'processing') %>">
                                                        <%= order.status %>
                                                    </span></td>
                                                <td>₹<%= order.totalPrice %> for <%= order.product.length %> item <%=
                                                                order.product.length> 1 ? 's' : '' %></td>
                                                <td>
                                                    <a href="/orderDetails?id=<%= order._id %>" class="view">View</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- wallet  -->
                        <div class="tab-pane fade" id="wallet" role="tabpanel" aria-labelledby="wallet-tab">
                            <% if (wallet) { %>
                                <div class="card coupon-container"
                                    style="border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 250px;">
                                    <div class="card-header bg-gradient-primary text-black"
                                        style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                                        <h5 style="margin-bottom: 0; font-size: 24px;">Wallet</h5>
                                    </div>
                                    <div class="card-body" style="max-width: 300px;">
                                        <div class="wallet-info" style="padding-bottom: 15px;">
                                            <h6 style="margin-bottom: 0; font-size: 18px;">Available Balance:</h6>
                                            <p id="balanceAmount"
                                                style="margin-top: 5px; font-size: 24px; font-weight: bold;">₹<%=
                                                    wallet.balance.toFixed(2) %>
                                            </p>
                                        </div>
                                        <div class="add-funds-form" style="margin-top: 20px;">
                                            <form id="addFundsForm" method="post" onsubmit="createOrder(event)">
                                                <div class="form-group">
                                                    <label for="amount"
                                                        style="margin-bottom: 5px; font-size: 18px;">Amount:</label>
                                                    <input type="number" class="form-control" id="amountInput"
                                                        name="amount"
                                                        style="border-radius: 20px; font-size: 16px; padding: 10px; border: 1px solid #ced4da;"
                                                        placeholder="Enter amount" required>
                                                </div>
                                                <button type="submit" class="btn btn-primary"
                                                    style="background-color: #000000; border-radius: 20px; padding: 10px 30px; font-size: 18px;">Pay</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <br><br>
                                <div class="transaction-history" style="max-height: 400px; overflow-y: auto;">
                                    <h2 style="position: sticky; top: 0; background-color: #ffffff; z-index: 1; color: #717fe0
; font-size: 24px; font-weight: bold; text-align: center; text-transform: uppercase; margin-bottom: 20px;">Transaction
                                        History</h2>
                                    <table style="width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>Transaction ID</th>
                                                <th>Date</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% wallet.history.reverse().forEach(transaction=> { %>
                                                <tr>
                                                    <td>#<%= Math.random().toString(36).substr(2, 8).toUpperCase() %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(transaction.createdAt).toLocaleString() %>
                                                    </td>
                                                    <td>
                                                        ₹<%= transaction.amount.toFixed(2) %>
                                                    </td>
                                                    <td>
                                                        <%= transaction.type %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p>No wallet data available</p>
                                    <% } %>
                        </div>

                        <!-- address  -->
                        <div class="tab-pane" id="address">
                            <h6 class="billing-address">Billing address</h6>
                            <br>
                            <p>The following addresses will be used on the checkout page by default.</p>
                            <br>
                            <% if(addressData && addressData.Address.length>0) { %>
                                <% addressData.Address.forEach(addr=>{ %>
                                    <p><strong>
                                            <%= addr.name %>
                                        </strong></p>
                                    <address>
                                        Address: <%= addr.address %> <br>
                                            City: <%= addr.city %> <br>
                                                State: <%= addr.state %> <br>
                                                    Country: <%= addr.country %> <br>
                                                        Pincode: <%= addr.pincode %> <br>
                                                            Phone: <%= addr.phone %> <br>
                                    </address>
                                    <a href="/editAddress?id=<%= addr._id %>" class="view">Edit Address</a>
                                    <span>|</span>
                                    <a href="/deleteAddress?id=<%= addr._id %>" class="delete"
                                        data-id="<%= addr._id %>">Delete Address</a>
                                    <br><br>
                                    <% }) %>
                                        <% } else { %>
                                            <p>No address found</p>
                                            <% } %>
                                                <br>
                                                <br>
                                                <a href="/addAddress" type="button">Add Address</a>
                        </div>

                        <!-- account details  -->
