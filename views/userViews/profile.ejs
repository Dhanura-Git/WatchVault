        <script>
            async function createOrder(event) {
                event.preventDefault();

                const amount = document.getElementById('amountInput').value;
                console.log(amount, 'amount in cereateorder fronttt');


                // Validate if the amount is zero or negative
                if (parseFloat(amount) <= 0) {
                    swal({
                        title: "Invalid Amount",
                        text: "The amount cannot be zero or negative. Please enter a valid amount.",
                        icon: "warning",
                        button: "OK"
                    });
                    return; // Stop the function execution if the amount is invalid
                }

                try {
                    // Make the request to add amount to wallet only if the amount is valid
                    const response = await fetch('/addToWallet', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ amount })
                    });

                    if (!response.ok) {
                        const error = await response.json();
                        swal({
                            title: "Error",
                            text: error.message || "Something went wrong while creating the order.",
                            icon: "error",
                            button: "OK"
                        });
                        return;
                    }

                    const { order } = await response.json();

                    const options = {
                        key: "rzp_test_KBfeMuv9hM52Z0",  // Your Razorpay key
                        amount: order.amount,
                        currency: "INR",
                        name: "WatchVault",
                        description: "Add Fund to Wallet",
                        order_id: order.id,
                        handler: function (response) {
                            verifyPayment(response, amount); // Pass the payment details and amount to the verifyPayment function
                        },
                        prefill: {
                            name: "WatchVault",
                            email: 'watchvault@gmail.com',
                            contact: '7744774477'
                        },
                        theme: {
                            color: "#3399cc"
                        }
                    };

                    const rzp1 = new Razorpay(options);
                    rzp1.open();

                } catch (error) {
                    console.error('Error creating order:', error);
                    swal({
                        title: "Error",
                        text: "Something went wrong while creating the order. Please try again.",
                        icon: "error",
                        button: "OK"
                    });
                }
            }


        </script>

        <script>
            const notyf = new Notyf();

            async function verifyPayment(paymentData, amount) {
                try {
                    const response = await fetch('/verifyPaymentWallet', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            razorpay_order_id: paymentData.razorpay_order_id,
                            razorpay_payment_id: paymentData.razorpay_payment_id,
                            razorpay_signature: paymentData.razorpay_signature,
                            amount: amount
                        })
                    });

                    const result = await response.json();

                    console.log(result, 'response in verify wallet payment in front');

                    if (response.ok && result.success) {
                        notyf.success('Payment successful and wallet updated');
                        location.reload();
                    } else {
                        swal({
                            title: "Error",
                            text: result.message || 'Payment verification failed',
                            icon: "error",
                            button: "OK",
                        });
                    }
                } catch (error) {
                    console.error('Error in payment verification:', error);
                    notyf.error('Payment verification failed: ' + error.message);
                }
            }



        </script>

