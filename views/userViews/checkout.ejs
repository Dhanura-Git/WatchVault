                            <h3>Your order</h3>
                            <div class="order_table table-responsive">
                                <table>
                                    <thead>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </thead>
                                    <tbody>
                                        <% if(locals.cart && cart.product.length>0) { %>
                                            <% let total=0 %>
                                                <% for(let i=0; i<cart.product.length; i++) { %>
                                                    <tr>
                                                        <td>
                                                            <a
                                                                href="/productDetails?id=<%= cart.product[i].productId._id %>">
                                                                <img src="/public/uploads/<%= cart.product[i].productId.images[0] %>"
                                                                    alt="" style="width: 100px; height: auto;">
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <h5><a
                                                                    href="/productDetails?id=<%= cart.product[i].productId._id %>">
                                                                    <%= cart.product[i].productId.productName %>
                                                                </a></h5>
                                                            <span>x <%= cart.product[i].quantity %></span>
                                                        </td>
                                                        <td>₹ <%= cart.product[i].productId.price *
                                                                cart.product[i].quantity %>
                                                        </td>
                                                    </tr>
                                                    <% total +=cart.product[i].productId.price *
                                                        cart.product[i].quantity %>
                                                        <% } %>
                                                            <tr>

                                                            </tr>
                                                            <% } %>
                                    </tbody>
