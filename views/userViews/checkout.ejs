    <script>
        document.getElementById('placeOrderBtn').addEventListener('click', async function (event) {
            event.preventDefault();

            const addressId = document.querySelector('input[name="selectedAddress"]:checked');
            if (!addressId) {
                Swal.fire({
                    icon: "warning",
                    title: "Oops...",
                    text: "Please select an address.",
                    confirmButtonText: "OK"
                });
                return;
            }

            const paymentOption = document.querySelector('input[name="paymentOption"]:checked');
            if (!paymentOption) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Oops...',
                    text: 'Please select a payment option.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            let totalPriceText = document.getElementById('totalPrice').textContent;
            totalPriceText = totalPriceText.replace('₹', '').trim();
            const totalPrice = parseFloat(totalPriceText);
            const couponCode = document.getElementById('couponCode').value.trim();

            try {
                const response = await fetch('/placeOrder', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        addressId: addressId.value,
                        paymentOption: paymentOption.value,
                        totalPrice: totalPrice,
                        couponCode: couponCode
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    if (paymentOption.value === 'COD') {
                        Swal.fire({
                            icon: 'success',
                            title: 'Order Placed!',
                            text: 'Your order has been placed successfully. Please pay on delivery.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            window.location.href = `/orderSuccess/${result.orderId}`;
                        });
                    } else if (paymentOption.value === 'razorpay') {
                        const { razorpayOrderId, amount, currency } = result;

                        const options = {
                            key: "rzp_test_KBfeMuv9hM52Z0",
                            amount: amount,
                            currency: currency,
                            name: 'WatchVault',
                            description: 'Payment for the product',
                            order_id: razorpayOrderId,
                            handler: async function (response) {
                                try {
                                    const verifyResponse = await fetch('/verifyRazorpay', {
                                        method: 'POST',
                                        headers: {
                                            'Content-type': 'application/json'
                                        },
                                        body: JSON.stringify({
                                            razorpay_order_id: response.razorpay_order_id,
                                            razorpay_payment_id: response.razorpay_payment_id,
                                            razorpay_signature: response.razorpay_signature,
                                            addressId: addressId.value,
                                            paymentOption: paymentOption.value,
                                            totalPrice: totalPrice
                                        })
                                    });

                                    const verifyData = await verifyResponse.json();
                                    if (verifyData.success) {
                                        Swal.fire({
                                            icon: 'success',
                                            title: 'Order Placed!',
                                            text: 'Your order has been placed successfully.',
                                            confirmButtonText: 'OK'
                                        }).then(() => {
                                            window.location.href = `/orderSuccess/${verifyData.orderId}`;
                                        });
                                    } else {
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Payment failed',
                                            text: verifyData.message,
                                            confirmButtonText: 'OK'
                                        });
                                    }
                                } catch (error) {
                                    console.error('Error during Razorpay verification:', error);
                                }
                            },
                            theme: {
                                color: "#F37254"
                            }
                        };

                        const rzp1 = new Razorpay(options);
                        rzp1.open();
                    } else if (paymentOption.value === 'wallet') {
                        Swal.fire({
                            icon: 'success',
                            title: 'Order Placed!',
                            text: 'Your order has been placed successfully using the wallet balance.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            window.location.href = `/orderSuccess/${result.orderId}`;
                        });
                    }
                } else {
                    const errorData = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Order failed',
                        text: errorData.message,
                        confirmButtonText: 'OK'
                    });
                }
            } catch (error) {
                console.error('Error in placing order:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong while placing the order.',
                    confirmButtonText: 'OK'
                });
            }
        });


    </script>


    <script>

        document.getElementById('applyCouponBtn').addEventListener('click', async () => {
            console.log('applycoupon in front');

            try {
                const couponCode = document.getElementById('couponCode').value;
                const subtotal = parseFloat(document.getElementById('subtotal').textContent.replace('₹', ''));
                console.log(subtotal, 'subtotal in frontt');

                const response = await fetch('/applyCoupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        coupon: couponCode,
                        totalsubtotal: subtotal
                    })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    const discountAmount = subtotal - data.discountTotal;
                    document.getElementById('discountAmount').textContent = `₹${discountAmount.toFixed(2)}`;
                    document.getElementById('discountedTotal').textContent = `₹${data.discountTotal.toFixed(2)}`;
                    document.querySelector('.cart_discount_total').style.display = 'block';
                    document.getElementById('applyCouponBtn').style.display = 'none';
                    document.getElementById('removeCouponBtn').style.display = 'inline-block';

                    const orderTotal = subtotal - discountAmount;
                    document.getElementById('totalPrice').textContent = `₹${orderTotal.toFixed(2)}`;
                } else {
                    document.getElementById('discountAmount').textContent = '';
                    document.getElementById('discountedTotal').textContent = '';
                    document.querySelector('.cart_discount_total').style.display = 'none';
                    document.getElementById('applyCouponBtn').style.display = 'inline-block';
                    document.getElementById('removeCouponBtn').style.display = 'none';
                    throw new Error(data.message || 'Failed to apply coupon');
                }
            } catch (error) {
                console.error('Error applying coupon:', error);
                // alert(error.message || 'Failed to apply coupon. Please try again.');
            }
        });

        document.getElementById('removeCouponBtn').addEventListener('click', async () => {
            try {
                console.log('remove coupon is here');

                const response = await fetch('/removeCoupon', {
                    method: 'POST'
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    const subtotal = parseFloat(document.getElementById('subtotal').textContent.replace('₹', ''));
                    document.getElementById('discountAmount').textContent = '';
                    document.getElementById('discountedTotal').textContent = '';
                    document.querySelector('.cart_discount_total').style.display = 'none';
                    document.getElementById('applyCouponBtn').style.display = 'inline-block';
                    document.getElementById('removeCouponBtn').style.display = 'none';
                    document.getElementById('couponCode').value = '';
                    document.getElementById('totalPrice').textContent = `₹${subtotal.toFixed(2)}`;
                } else {
                    throw new Error(data.message || 'Failed to remove coupon');
                }
            } catch (error) {
                console.error('Error removing coupon:', error);
            }
        });
    </script>


