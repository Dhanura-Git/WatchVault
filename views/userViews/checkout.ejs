            <!-- Start User Details Checkout Form -->
            <div class="checkout_form" data-aos="fade-up" data-aos-delay="400">
                <div class="row">
                    <h2 style="text-align: center;"><strong>Checkout</strong></h2>
                    <br><br><br>
                    <div class="col-lg-6 col-md-6">
                        <form action="#">
                            <h3>Billing Address</h3>
                            <div class="row">
                                <div class="address-container">
                                    <% if (addresses && addresses.Address && addresses.Address.length> 0) { %>
                                        <% addresses.Address.forEach(function(address, index) { %>
                                            <div class="address-box">
                                                <input type="radio" id="address_<%= index %>" name="selectedAddress"
                                                    value="<%= address._id %>" <% if (index===0) { %> checked <% } %>>
                                                    <label for="address_<%= index %>">
                                                        <div>
                                                            <span>
                                                                <%= address.name %>
                                                            </span>
                                                            <span>
                                                                <%= address.address %>, <%= address.city %>, <%=
                                                                            address.state %> - <%= address.pincode %>
                                                            </span>
                                                            <span>Phone: <%= address.phone %></span>
                                                        </div>
                                                    </label>
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <p>No addresses found. </p>
                                                    <% } %>
                                                        <a href="/addAddress">Add Address</a>

                                </div>

                                <div class="selected-address" id="selected-address-info">
                                    <!-- Selected address will be displayed here -->
                                </div>
                                <div class="container mt-4">
                                    <div class="row">
                                        <!-- Available Coupons Section (Left Side) -->
                                        <div class="col-lg-6">
                                            <div class="available-coupons">
                                                <h4 class="section-title"><u>Available Coupons</u></h4>
                                                <div id="couponsDiv" class="row">
                                                    <% if (coupons.length > 0) { %>
                                                        <% coupons.forEach(coupon => { %>
                                                            <div class="col-12">
                                                                <div class="coupon-card card mb-3">
                                                                    <div class="card-body">
                                                                        <p><strong>Coupon Code:</strong> <span class="coupon-code"><%= coupon.couponCode %></span></p>
                                                                        <p><strong>Discount:</strong> <%= coupon.discountValue %>% off</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        <% }) %>
                                                    <% } else { %>
                                                        <p class="no-coupons">No coupons available.</p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                
                                        <!-- Apply Coupon Section (Right Side) -->
                                        <div class="col-lg-6">
                                            <div class="apply-coupon">
                                                <div class="coupon_code" data-aos="fade-up" data-aos-delay="200">
                                                    <h3>Coupon</h3>
                                                    <div class="coupon_inner">
                                                        <p>Enter your coupon code if you have one.</p>
                                                        <input class="form-control mb-2" placeholder="Coupon code" type="text" id="couponCode">
                                                        <button type="button" class="btn btn-md btn-golden" id="applyCouponBtn">Apply coupon</button>
                                                        <button type="button" class="btn btn-md btn-danger" id="removeCouponBtn" style="display: none;">Remove coupon</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                


                            </div>
                        </form>
                    </div>
