<!DOCTYPE HTML>
<html lang="en">


<head>
    <meta charset="utf-8">
    <title>WatchVault Product</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <!-- <link rel="shortcut icon" type="image/x-icon" href="adminAssets/imgs/theme/favicon.svg"> -->
    <link href="adminAssets/css/main.css" rel="stylesheet" type="text/css" />

    <style>
        .button-container {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .Add-offer-btn {
            background-color: rgb(255, 216, 20);
            color: rgb(0, 0, 0);
        }

        .Add-offer-btn:hover {
            background-color: rgb(248, 214, 45);
            color: rgb(4, 4, 4);
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <%- include('./partials/adminAside.ejs') %>
        <main class="main-wrap">
            <%- include('./partials/adminHeader.ejs') %>
                <section class="content-main">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Products</h2>
                            <!-- <p>Lorem ipsum dolor sit amet.</p> -->
                        </div>
                        <!-- <div>
                    <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a>
                    <a href="#" class="btn btn-primary btn-sm rounded">Create new</a>
                </div> -->
                    </div>
                    <div class="card mb-4">
                        <header class="card-header">
                            <div class="row gx-3">
                                <div class="col-lg-4 col-md-6 me-auto">
                                    <!-- <input type="text" placeholder="Search..." class="form-control"> -->
                                </div>
                                <!-- <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>All category</option>
                                <option>Electronics</option>
                                <option>Clothings</option>
                                <option>Something else</option>
                            </select>
                        </div> -->
                                <!-- <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Latest added</option>
                                <option>Cheap first</option>
                                <option>Most viewed</option>
                            </select>
                        </div> -->
                            </div>
                        </header> <!-- card-header end// -->

                        <div class="card-body">
                            <% if(locals.prodData) { %>
                                <div
                                    class="row gx-3 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 row-cols-xxl-5">
                                    <% for(let i=0; i < prodData.length; i++){ %>
                                        <div class="col">
                                            <div class="card card-product-grid">
                                                <a href="#" class="img-wrap"> <img
                                                        src="/public/uploads/<%= prodData[i].images[0] %>"
                                                        alt="Product"> </a>
                                                <div class="info-wrap">
                                                    <a href="#" class="title text-truncate" style="font-size: 16px;">
                                                        <%= prodData[i].productName %>
                                                    </a>

                                                    <% if (prodData[i].offer && prodData[i].offer.offerName &&
                                                        prodData[i].offer.offerPercentage> 0) { %>
                                                        <div class="price mb-2" style="font-size: 14px;">₹ <%=
                                                                prodData[i].originalPrice %>
                                                        </div>
                                                        <% } else { %>
                                                            <div class="price mb-2" style="font-size: 14px;">₹ <%=
                                                                    prodData[i].price %>
                                                            </div>
                                                            <% } %>


                                                                <!-- Container to align Edit and Block buttons -->
                                                                <div class="button-container">
                                                                    <a href="/admin/loadEditProduct?id=<%= prodData[i]._id %>"
                                                                        class="btn btn-sm font-sm rounded btn-brand">
                                                                        <i class="material-icons md-edit"></i> Edit
                                                                    </a>

                                                                    <% if (prodData[i].is_Active) { %>
                                                                        <a href="/admin/unlistProduct?id=<%= prodData[i]._id %>"
                                                                            class="btn btn-sm btn-danger rounded font-sm">Block</a>
                                                                        <% } else{ %>
                                                                            <a href="/admin/listProduct?id=<%= prodData[i]._id %>"
                                                                                class="btn btn-sm btn-success rounded font-sm">Unblock</a>
                                                                            <% } %>
                                                                </div>

                                                                <br>

                                                                <% if (prodData[i].offer===null) { %>

                                                                    <% } else { %>

                                                                        <% } %>

                                                                            <% if (prodData[i].offer &&
                                                                                prodData[i].offer.offerName &&
                                                                                prodData[i].offer.offerPercentage> 0) {
                                                                                %>
                                                                                <div class="price mb-2"
                                                                                    style="font-size: 12px;">
                                                                                    <div class="price mb-2"
                                                                                        style="font-size: 14px;">
                                                                                        Discount: <%=
                                                                                            prodData[i].offer.offerPercentage
                                                                                            %> %</p>
                                                                                    </div>
                                                                                    <div class="price mb-2"
                                                                                        style="font-size: 14px;">Price
                                                                                        After Discount: ₹<%=
                                                                                            prodData[i].price %>
                                                                                            </p>
                                                                                    </div>

                                                                                </div>

                                                                                <% } %>

                                                </div>

                                            </div>

                                        </div>

                                        <% } %>
                                            <!-- Modal for Product Offer  -->
                                            <% for (let i=0; i < prodData.length; i++) { %>
                                                <div class="modal fade" id="productOfferModal<%= prodData[i]._id %>"
                                                    tabindex="-1"
                                                    aria-labelledby="productOfferModalLabel<%= prodData[i]._id %>"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title"
                                                                    id="productOfferModalLabel<%= prodData[i]._id %>">
                                                                    Apply Offer</h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="form-group">
                                                                    <label
                                                                        for="offerPercentage<%= prodData[i]._id %>">Offer
                                                                        Percentage:</label>
                                                                    <input type="number" class="form-control"
                                                                        id="offerPercentage<%= prodData[i]._id %>"
                                                                        placeholder="Enter offer percentage">
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Cancel</button>
                                                                <button type="button" class="btn btn-primary"
                                                                    onclick="applyProductOffer('<%= prodData[i]._id %>')">Apply
                                                                    Offer</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <% } %>
                                </div>
                                <% } %>
                        </div>
                    </div>


                    <div class="pagination-area mt-30 mb-50">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-start">

                                <li class="page-item <%= currentpage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentpage - 1 %>">
                                        <i class="material-icons md-chevron_left"></i>
                                    </a>
                                </li>

                                <% for(let i=1; i <=totalpages; i++) { %>
                                    <li class="page-item <%= i === currentpage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>">
                                            <%= i %>
                                        </a>
                                    </li>
                                    <% } %>

                                        <li class="page-item <%= currentpage === totalpages ? 'disabled' : '' %>">
                                            <a class="page-link" href="?page=<%= currentpage + 1 %>">
                                                <i class="material-icons md-chevron_right"></i>
                                            </a>
                                        </li>

                            </ul>
                        </nav>
                    </div>

                </section>
                <footer class="main-footer font-xs">

                </footer>

                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <!-- Bootstrap JS -->
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                <!-- SweetAlert -->
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                <script>
                    function openProductOfferModal(productId) {
                        // Open the corresponding modal using its ID
                        $('#productOfferModal' + productId).modal('show');
                    }

                    function applyProductOffer(productId) {
                        const offerPercentage = $('#offerPercentage' + productId).val();
                        $.ajax({
                            url: '/admin/addOffer',
                            method: 'POST',
                            data: {
                                productId: productId,
                                offer: offerPercentage
                            },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Offer Applied',
                                        text: 'The offer has been successfully applied!'
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message || 'An error occurred while applying the offer.'
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'An internal server error occurred.'
                                });
                            }
                        });
                    }

                    function removeOffer(productId) {
                        $.ajax({
                            url: '/admin/removeOffer',
                            method: 'POST',
                            data: { productId: productId },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Offer Removed',
                                        text: 'The offer has been successfully removed!'
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message || 'An error occurred while removing the offer.'
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'An internal server error occurred.'
                                });
                            }
                        });
                    }
                </script>

        </main>



        <script src="adminAssets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="adminAssets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="adminAssets/js/vendors/select2.min.js"></script>
        <script src="adminAssets/js/vendors/perfect-scrollbar.js"></script>
        <script src="adminAssets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="adminAssets/js/main.js" type="text/javascript"></script>

</body>


</html>